<masters>
  <master idx="0" appTimePeriod="1000000" refClockSyncCycles="1">
    <!-- IHSV57/60-EC Motor -->
    <slave idx="0" type="generic" vid="66668888" pid="2019a301" configPdos="true">
      <dcConf assignActivate="300" sync0Cycle="*1" sync0Shift="0"/>
      
      <!-- SDO configuraties indien nodig later toe te voegen -->
      
      <!-- RxPDO - Output naar motor (SM2) -->
      <syncManager idx="2" dir="out">
        <pdo idx="1600">
          <!-- CIA402 Controlword -->
          <pdoEntry idx="6040" subIdx="00" bitLen="16" halPin="cia-controlword" halType="u32"/>
          
          <!-- Operation mode -->
          <pdoEntry idx="6060" subIdx="00" bitLen="8" halPin="opmode" halType="s32"/>
          
          <!-- Target Position -->
          <pdoEntry idx="607A" subIdx="00" bitLen="32" halPin="target-position" halType="s32"/>
          
          <!-- Touch probe function -->
          <pdoEntry idx="60B8" subIdx="00" bitLen="16" halPin="touch-probe-function" halType="u32"/>
          
          <!-- Physical outputs -->
          <pdoEntry idx="60FE" subIdx="01" bitLen="32" halPin="physical-outputs" halType="u32"/>
          
          <!-- Bit mask -->
          <pdoEntry idx="60FE" subIdx="02" bitLen="32" halPin="bit-mask" halType="u32"/>
        </pdo>
      </syncManager>
      
      <!-- TxPDO - Input van motor (SM3) -->
      <syncManager idx="3" dir="in">
        <pdo idx="1a00">
          <!-- Error code -->
          <pdoEntry idx="603F" subIdx="00" bitLen="16" halPin="cia-faultcode" halType="u32"/>
          
          <!-- CIA402 Statusword -->
          <pdoEntry idx="6041" subIdx="00" bitLen="16" halPin="cia-statusword" halType="u32"/>
          
          <!-- Operation mode display -->
          <pdoEntry idx="6061" subIdx="00" bitLen="8" halPin="opmode-display" halType="s32"/>
          
          <!-- Actual Position -->
          <pdoEntry idx="6064" subIdx="00" bitLen="32" halPin="actual-position" halType="s32"/>
          
          <!-- Touch probe status -->
          <pdoEntry idx="60B9" subIdx="00" bitLen="16" halPin="touch-probe-status" halType="u32"/>
          
          <!-- Touch probe position values -->
          <pdoEntry idx="60BA" subIdx="00" bitLen="32" halPin="touch-probe-pos1-pos" halType="s32"/>
          <pdoEntry idx="60BB" subIdx="00" bitLen="32" halPin="touch-probe-pos1-neg" halType="s32"/>
          <pdoEntry idx="60BC" subIdx="00" bitLen="32" halPin="touch-probe-pos2-pos" halType="s32"/>
          <pdoEntry idx="60BD" subIdx="00" bitLen="32" halPin="touch-probe-pos2-neg" halType="s32"/>
          
          <!-- Digital inputs -->
          <pdoEntry idx="60FD" subIdx="00" bitLen="32" halType="complex">
            <complexEntry bitLen="1" halPin="in-negative-limit" halType="bit"/>  <!-- Bit 0 = Pin 2 CW- -->
            <complexEntry bitLen="1" halPin="in-positive-limit" halType="bit"/>  <!-- Bit 1 = Pin 4 CCW+ -->
            <complexEntry bitLen="1" halPin="in-home" halType="bit"/>            <!-- Bit 2 = Pin 3 HW+ -->
            <complexEntry bitLen="6"/>                                            <!-- Bits 3-8 -->
            <complexEntry bitLen="1" halPin="in-probe1" halType="bit"/>          <!-- Bit 9 = Pin 5 DI3 -->
            <complexEntry bitLen="22"/>                                           <!-- Bits 10-31 -->
          </pdoEntry>
        </pdo>
      </syncManager>
    </slave>
  </master>
</masters>
